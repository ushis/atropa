/**
 * atropa.css
 *
 * The atropa frontend stylesheet
 *
 * =require reset
 */
body {
  font-size: .9em;
  background-color: #111;
}

a {
  color: #555;
}

a:hover {
  color: #ff7916;
}

/* Main */
#wrapper {
  width: 640px;
  margin: 20px auto;
}

#wrapper > header {
  position: relative;
  padding: 30px 0;
}

#wrapper > header h1 a {
  display: block;
  width: 147px;
  height: 41px;
  text-indent: -9999px;
  background: transparent url(<%= asset_data_uri 'atropa.png' %>) left top no-repeat;
}

#tools {
  float: right;
  margin-top: 4px;
  background-color: #222;
  border-radius: 2px;
  z-index: 9999;
}

#tools > li {
  float: left;
}

#tools > li > * {
  display: block;
  padding: 0 10px;
  line-height: 32px;
  font-size: 14px;
}

#tools div.sub-link {
  position: relative;
  color: #555;
  cursor: default;
}

#tools div.sub-link:before, #tools div.sub-link:after {
  content: ' ';
  display: none;
  position: absolute;
  bottom: -12px;
  width: 0;
  height: 0;
  border: 0 solid transparent;
  z-index: 100;
}

#tools div.sub-link:before {
  margin-left: -1px;
  border-width: 12px;
  border-top-width: 0;
  border-bottom-color: #383838;
}

#tools div.sub-link:after {
  border-width: 11px;
  border-top-width: 0;
  border-bottom-color: #222;
}

#tools li:hover div.sub-link {
  color: #ff7916;
}

#tools li:hover div.sub-link:before,
#tools li:hover div.sub-link:after {
  display: block;
}

#tools input[type=text] {
  width: 160px;
  height: 16px;
  padding: 2px 6px;
  font-size: 13px;
  color: #555;
  background-color: #111;
  border: 1px solid #222;
  border-radius: 2px;
  -webkit-transition: width .4s, background-color .4s;
  -moz-transition: width .4s, background-color .4s;
  -o-transition: width .4s, background-color .4s;
  -ms-transition: width .4s, background-color .4s;
  transition: width .4s, background-color .4s;
}

#tools input[type=text].empty {
  width: 2px;
  background: transparent url(<%= asset_data_uri 'search.png' %>) -14px center no-repeat;
  cursor: pointer;
}

#tools input[type=text].empty:hover {
  background-position: left center;
}

#tools input[type=text]:focus {
  color: #aaa;
  border-color: #2c2c2c;
}

#tools div.sub {
  display: none;
  position: absolute;
  right: 0;
  padding: 11px 0 0 0;
  z-index: 99;
}

#tools li:hover div.sub {
  display: block;
}

#tools div.sub > div {
  float: left;
  padding: 10px;
  background-color: #222;
  border: 1px solid #383838;
  border-radius: 2px;
  box-shadow: 0 0 3px rgba(46, 46, 46, .8);
}

#tools div.sub ul.tags {
  float: left;
  margin: 0 10px;
  line-height: 20px;
  font-size: 13px;
}

#tools div.sub ul.tags li.cur a {
  color: #ff7916;
}

/* Videos */
article {
  float: left;
  clear: both;
  width: 100%;
  margin: 30px 0;
}

article:first-child {
  margin-top: 0;
}

div.video {
  position: relative;
}

div.video div.preview img, div.video iframe {
  vertical-align: bottom;
}

div.video div.player, div.video a.play {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

div.video a.play {
  font-size: 100px;
  text-align: center;
  line-height: 300px;
  color: #ff7916;
  opacity: .98;
  -webkit-transition: color .4s;
  -moz-transition: color .4s;
  -o-transition: color .4s;
  -ms-transition: color .4s;
  transition: color .4s;
}

div.video a.play:hover {
  color: #111;
}

article footer {
  padding-top: 10px;
}

article footer ul.links li {
  float: right;
  margin-left: 8px;
}

article footer ul.tags li {
  float: left;
}

article footer ul.tags li:nth-child(n+2):before {
  content: '/';
  margin: 0 6px 0 10px;
  color: #555;
}

/* Similar videos */
ul.similar-videos {
  clear: both;
  float: left;
  margin: 30px 0;
}

ul.similar-videos li {
  float: left;
  margin-right: 20px;
}

ul.similar-videos li:last-child {
  margin: 0;
}

ul.similar-videos li a {
  position: relative;
  display: block;
  height: 81px;
  overflow: hidden;
  background-color: #000;
}

ul.similar-videos li a:before {
  content: 'â–¶';
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 81px;
  font-size: 40px;
  color: #111;
  -webkit-transition: color .4s;
  -moz-transition: color .4s;
  -o-transition: color .4s;
  -ms-transition: color .4s;
  transition: color .4s;
}

ul.similar-videos li a:hover:before {
  color: #ff7916;
}

/* Stats */
#graphs {
  margin-top: 10px;
}

#graphs li {
  float: left;
  margin-bottom: 40px;
}

#graphs li:nth-child(2n) {
  margin-left: 20px;
}

#graphs li a {
  display: block;
  width: 310px;
  height: 160px;
  background: transparent url('/assets/graphs.png') left top no-repeat;
  text-indent: -9999px;
}

#graphs a.tagmap {
  background-position: 0 -160px;
}

#graphs a.fountain {
  background-position: 0 -320px;
}

#graphs a.fishnet:hover {
  background-position: -310px 0;
}

#graphs a.tagmap:hover {
  background-position: -310px -160px;
}

#graphs a.fountain:hover {
  background-position: -310px -320px;
}

#graph.fishnet circle {
  fill: #333;
  cursor: move;
  -webkit-transition: fill .4s;
  -moz-transition: fill .4s;
  -o-transition: fill .4s;
  -ms-transition: fill .4s;
  transition: fill .4s;
}

#graph.fishnet circle:hover {
  fill: #ff7916;
}

#graph.fishnet line {
  stroke: #222;
  -webkit-transition: stroke .4s;
  -moz-transition: stroke .4s;
  -o-transition: stroke .4s;
  -ms-transition: stroke .4s;
  transition: stroke .4s;
}

#graph.fishnet line.highlight {
  stroke: #333;
}

#graph.tagmap div {
  position: absolute;
  color: #000;
  font-size: 12px;
  overflow: hidden;
}

#graph.tagmap div p {
  margin: 4px;
}

#graph.tagmap div.empty {
  background-color: #222;
  cursor: pointer;
  -webkit-transition: background-color .4s;
  -moz-transition: background-color .4s;
  -o-transition: background-color .4s;
  -ms-transition: background-color .4s;
  transition: background-color .4s;
}

#graph.tagmap div.empty:hover {
  background-color: #ff7916;
}

#graph.fountain svg {
  fill: #111;
}

#graph.fountain g.node {
  cursor: pointer;
}

#graph.fountain path.chord {
  fill: #2f2f2f;
}

#graph.fountain.active path.chord {
  display: none;
}

#graph.fountain.active path.chord.highlight {
  display: block;
  fill: #ff7916;
}

#graph.fountain text {
  font-size: 11px;
  fill: #111;
}

#graph.fountain path.node {
  fill: #222;
}

#graph.fountain .highlight path.node,
#graph.fountain .highlight text {
  fill: #ff7916;
}

/* Pagination */
ul.pagination {
  float: left;
  width: 100%;
  margin: 0 0 50px -6px;
}

ul.pagination li {
  float: left;
}

ul.pagination li > * {
  padding: 6px;
}

ul.pagination li span {
  color: #ff7916;
}

ul.pagination li span.gap {
  color: #555;
}
