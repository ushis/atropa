<%= form_tag admin_forgot_password_path, method: :put do %>
  <p>
    <%= text_field_tag(:email, nil, { placeholder: 'enter your email',
                                      required: true }) %>
  </p>
  <p>
    <%= link_to 'Remember again?', admin_login_path %>
    <%= submit_tag 'Continue' %>
  </p>
<% end %>
