<%= form_for [:admin, @user] do |f| %>
  <h1>
    <%= link_to gravatar_tag(@user.email, 32), 'https://secure.gravatar.com/' %>
    <%= @user.username %>
  </h1>
  <p class="api-key">
    API Key
    <span><%= @user.api_key %></span>
    <%= check_box_tag :refresh_api_key %>
    <%= label_tag :refresh_api_key, 'refresh' %>
  </p>
  <p>
    <%= f.text_field :email, placeholder: 'Insert your email' %>
    <%= error_list @user.errors[:email] %>
  <p>
    <%= f.password_field :password, placeholder: 'Insert a new password' %>
    <%= error_list @user.errors[:password] %>
  </p>
  <p>
    <%= f.password_field :password_confirmation, placeholder: 'Repeat the new password' %>
    <%= error_list @user.errors[:password_confirmation] %>
  </p>
  <p>
    <%= f.password_field(:password_old, required: true,
                         placeholder: 'Confirm with your current password') %>
    <%= error_list @user.errors[:password_old] %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
