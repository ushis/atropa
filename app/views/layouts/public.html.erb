<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title><%= @title %> : atropa</title>

    <%= stylesheet_link_tag 'atropa', media: :all %>
    <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js' %>
    <%= javascript_include_tag 'atropa' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <header>
        <h1>
          <%= link_to 'atropa', root_path %>
        </h1>
      </header>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
